<div class="grid place-items-center min-h-screen bg-pattern px-4 py-9 text-sm sm:text-base">
	<main class="flex flex-col gap-4 w-full max-w-sm p-6 md:p-8 rounded-3xl bg-theme-1 dark-t:bg-theme-2 shadow-equal shadow-theme-neutral-5 dark-t:shadow-theme-neutral-1">
		<h1 class="sr-only">Log in</h1>

		<.form let={f} for={@conn} action={Routes.user_session_path(@conn, :create)} as={:user} class="contents">
		  <%= if @error_message do %>
			  <div class="alert alert-danger">
		  	  <p><%= @error_message %></p>
	  		</div>
		  <% end %>

      <%= link to: Routes.user_oauth_path(@conn, :request, "github"), class: "p-3 rounded-xl border-2 border-theme-neutral-7 hover:border-theme-neutral-5 transition-colors text-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 16 16" fill="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="absolute text-theme-neutral-9">
          <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
        </svg>

        Continue with GitHub
      <% end %>

      <%= link to: Routes.user_oauth_path(@conn, :request, "google"), class: "p-3 rounded-xl border-2 border-theme-neutral-7 hover:border-theme-neutral-5 transition-colors text-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" class="absolute text-theme-neutral-9">
          <path d="M1.24182 6.67897C1.98432 5.13169 3.03341 3.82393 4.35554 2.73652C6.14713 1.2563 8.20219 0.365299 10.5063 0.0922493C13.2129 -0.228704 15.7566 0.283863 18.1086 1.69222C18.693 2.04192 19.2391 2.43952 19.7613 2.87065C19.8906 2.97604 19.8763 3.03831 19.7661 3.1437C18.6978 4.20715 17.6296 5.27061 16.5709 6.34365C16.4464 6.4682 16.3793 6.45862 16.2452 6.35802C13.141 3.96764 8.61416 4.61433 6.30042 7.77596C5.89324 8.33164 5.56271 8.93043 5.33277 9.58192C5.31361 9.6394 5.27529 9.6921 5.24655 9.74958C4.62859 9.28013 4.00585 8.81067 3.39269 8.33643C2.67413 7.78554 1.95558 7.23465 1.24182 6.67897Z" fill="#E94335"></path>
          <path d="M5.24646 14.2429C5.45244 14.698 5.62489 15.1722 5.88357 15.5986C6.97098 17.3806 8.52305 18.5255 10.5685 18.9327C12.4128 19.3015 14.1852 19.0524 15.8379 18.1279C15.8954 18.0991 15.9529 18.0704 16.0056 18.0417C16.0343 18.0704 16.0583 18.1039 16.087 18.1279C17.3229 19.086 18.5636 20.044 19.7995 21.0021C19.2055 21.5913 18.5301 22.0656 17.8115 22.4775C15.7277 23.6655 13.4715 24.1446 11.0955 23.9625C8.13503 23.7326 5.58178 22.5637 3.47403 20.456C2.54949 19.5315 1.78783 18.4872 1.23694 17.2944C1.74951 16.9016 2.26207 16.5135 2.77464 16.1207C3.59858 15.4932 4.42252 14.8705 5.24646 14.2429Z" fill="#34A853"></path>
          <path d="M19.8044 21.0021C18.5685 20.044 17.3278 19.086 16.0919 18.1279C16.0632 18.1039 16.0344 18.0704 16.0105 18.0417C16.4368 17.7111 16.8727 17.3902 17.2224 16.9686C17.8069 16.2692 18.1949 15.4788 18.3961 14.5926C18.42 14.4824 18.4009 14.4441 18.2907 14.4489C18.2332 14.4537 18.1805 14.4489 18.123 14.4489C16.1686 14.4489 14.2093 14.4441 12.2548 14.4537C12.0393 14.4537 11.9914 14.3962 11.9962 14.1902C12.0057 12.801 12.0057 11.4118 11.9962 10.0226C11.9962 9.84539 12.0441 9.79749 12.2213 9.79749C15.8045 9.80228 19.3877 9.80228 22.9756 9.79749C23.1289 9.79749 23.1912 9.83581 23.2295 9.99868C23.5217 11.316 23.5026 12.6382 23.3253 13.9699C23.1816 15.0333 22.9229 16.0633 22.5253 17.0596C21.9361 18.5303 21.0691 19.8141 19.929 20.9159C19.8859 20.9494 19.8427 20.9734 19.8044 21.0021Z" fill="#4285F3"></path>
          <path d="M5.24651 14.2429C4.42257 14.8705 3.59863 15.4932 2.77469 16.1208C2.26213 16.5088 1.74956 16.9016 1.23699 17.2944C0.839395 16.5567 0.580717 15.7758 0.369942 14.9711C-0.0324468 13.4142 -0.0947213 11.8334 0.125634 10.2478C0.298087 9.0023 0.657362 7.80472 1.23699 6.68378C1.95555 7.23467 2.66931 7.79035 3.38786 8.34124C4.00581 8.81548 4.62377 9.28493 5.24172 9.75439C5.13633 10.267 4.98783 10.7699 4.93993 11.2969C4.8537 12.2549 4.94472 13.1891 5.21777 14.1088C5.23693 14.1471 5.24172 14.195 5.24651 14.2429Z" fill="#FABB06"></path>
        </svg>

        Continue with Google
      <% end %>

      <%= link to: Routes.user_oauth_path(@conn, :request, "twitter"), hidden: true, class: "p-3 rounded-xl border-2 border-theme-neutral-7 hover:border-theme-neutral-5 transition-colors text-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48" class="absolute text-theme-neutral-9">
          <path fill="#03A9F4" d="M42,12.429c-1.323,0.586-2.746,0.977-4.247,1.162c1.526-0.906,2.7-2.351,3.251-4.058c-1.428,0.837-3.01,1.452-4.693,1.776C34.967,9.884,33.05,9,30.926,9c-4.08,0-7.387,3.278-7.387,7.32c0,0.572,0.067,1.129,0.193,1.67c-6.138-0.308-11.582-3.226-15.224-7.654c-0.64,1.082-1,2.349-1,3.686c0,2.541,1.301,4.778,3.285,6.096c-1.211-0.037-2.351-0.374-3.349-0.914c0,0.022,0,0.055,0,0.086c0,3.551,2.547,6.508,5.923,7.181c-0.617,0.169-1.269,0.263-1.941,0.263c-0.477,0-0.942-0.054-1.392-0.135c0.94,2.902,3.667,5.023,6.898,5.086c-2.528,1.96-5.712,3.134-9.174,3.134c-0.598,0-1.183-0.034-1.761-0.104C9.268,36.786,13.152,38,17.321,38c13.585,0,21.017-11.156,21.017-20.834c0-0.317-0.01-0.633-0.025-0.945C39.763,15.197,41.013,13.905,42,12.429"></path>
        </svg>

        Continue with Twitter
      <% end %>

      <%= link to: Routes.user_oauth_path(@conn, :request, "facebook"), class: "p-3 rounded-xl border-2 border-theme-neutral-7 hover:border-theme-neutral-5 transition-colors text-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 48 48" class="absolute text-theme-neutral-9">
          <path fill="#039be5" d="M24 5A19 19 0 1 0 24 43A19 19 0 1 0 24 5Z"></path><path fill="#fff" d="M26.572,29.036h4.917l0.772-4.995h-5.69v-2.73c0-2.075,0.678-3.915,2.619-3.915h3.119v-4.359c-0.548-0.074-1.707-0.236-3.897-0.236c-4.573,0-7.254,2.415-7.254,7.917v3.323h-4.701v4.995h4.701v13.729C22.089,42.905,23.032,43,24,43c0.875,0,1.729-0.08,2.572-0.194V29.036z"></path>
        </svg>

        Continue with Facebook
      <% end %>

      <%= link to: Routes.user_oauth_path(@conn, :request, "discord"), class: "p-3 rounded-xl border-2 border-theme-neutral-7 hover:border-theme-neutral-5 transition-colors text-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" version="1.1" viewBox="0 0 71 55" fill="currentColor" class="absolute text-theme-neutral-9">
	        <path d="m60.1 4.9c-4.53-2.08-9.38-3.61-14.5-4.48-0.0924-0.0169-0.185 0.0253-0.232 0.11-0.624 1.11-1.32 2.56-1.8 3.7-5.46-0.817-10.9-0.817-16.2 0-0.484-1.16-1.2-2.59-1.83-3.7-0.0476-0.0817-0.14-0.124-0.232-0.11-5.07 0.873-9.92 2.4-14.5 4.48-0.0392 0.0169-0.0728 0.0451-0.0951 0.0817-9.2 13.8-11.7 27.2-10.5 40.4 0.0056 0.0648 0.042 0.127 0.0924 0.166 6.07 4.46 12 7.17 17.7 8.96 0.0924 0.0282 0.19-0.0056 0.249-0.0817 1.37-1.86 2.58-3.83 3.63-5.9 0.0616-0.121 0.0028-0.265-0.123-0.313-1.93-0.732-3.77-1.63-5.54-2.64-0.14-0.0817-0.151-0.282-0.0224-0.378 0.372-0.279 0.744-0.569 1.1-0.862 0.0643-0.0535 0.154-0.0648 0.23-0.031 11.6 5.31 24.2 5.31 35.7 0 0.0756-0.0366 0.165-0.0253 0.232 0.0282 0.356 0.293 0.728 0.586 1.1 0.865 0.129 0.0958 0.12 0.296-0.0196 0.378-1.77 1.03-3.61 1.91-5.54 2.64-0.126 0.0479-0.182 0.194-0.12 0.316 1.07 2.07 2.28 4.03 3.62 5.9 0.056 0.0789 0.157 0.113 0.249 0.0845 5.8-1.79 11.7-4.5 17.8-8.96 0.0532-0.0394 0.0868-0.0986 0.0924-0.163 1.48-15.3-2.48-28.6-10.5-40.4-0.0196-0.0394-0.0531-0.0676-0.0923-0.0845zm-36.4 32.4c-3.5 0-6.38-3.21-6.38-7.16s2.83-7.16 6.38-7.16c3.58 0 6.44 3.24 6.38 7.16 0 3.94-2.83 7.16-6.38 7.16zm23.6 0c-3.5 0-6.38-3.21-6.38-7.16s2.83-7.16 6.38-7.16c3.58 0 6.44 3.24 6.38 7.16 0 3.94-2.8 7.16-6.38 7.16z" />
        </svg>

        Continue with Discord
      <% end %>

      <%= link to: Routes.user_oauth_path(@conn, :request, "guest"), class: "p-3 rounded-xl border-2 border-theme-neutral-7 hover:border-theme-neutral-5 transition-colors text-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" class="absolute text-theme-neutral-9">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>

        Continue as Guest
      <% end %>

      <hr class="w-2/3 mx-auto my-4">

      <div class="flex flex-col gap-1.5">
		    <%= label f, :email, "E-mail" %>
		    <%= email_input f, :email, required: true, placeholder: "john.doe@example.com", class: "p-3 rounded-xl bg-transparent border-2 border-theme-neutral-7 hover:border-theme-neutral-5 transition-colors" %>
      </div>

      <div class="flex flex-col gap-1.5">
		    <%= label f, :password %>
		    <%= password_input f, :password, required: true, placeholder: "Password", class: "p-3 rounded-xl bg-transparent border-2 border-theme-neutral-7 hover:border-theme-neutral-5 transition-colors" %>
      </div>

  	  <%= submit "Log in", class: "block p-3 rounded-xl text-theme-neutral-1 bg-theme-neutral-8 hover:bg-theme-neutral-6 font-display transition-colors" %>

      <label class="flex justify-between items-center">
        Remember me for 60 days
        <input type="checkbox" name="remember_me" class="sr-only peer">
        <div class="w-14 h-7 rounded-full border-2 border-theme-neutral-8 peer-checked:border-accent-600 peer-checked:bg-accent-600 transition-colors before:block before:w-4 before:h-4 before:m-1 before:rounded-full before:bg-theme-neutral-8 peer-checked:before:bg-theme-1 peer-checked:before:translate-x-7 before:transition-transform peer-focus:outline outline-1 outline-blue-600 cursor-pointer"></div>
      </label>

		</.form>

		<p class="text-center text-theme-neutral-6 mt-4 cursor-default">
		  <%= link "Register", to: Routes.user_registration_path(@conn, :new), class: "underline hover:text-theme-neutral-10 transition-colors" %>
      |
		  <%= link "Forgot your password?", to: Routes.user_reset_password_path(@conn, :new), class: "underline hover:text-theme-neutral-10 transition-colors" %>
		</p>
	</main>
</div>
